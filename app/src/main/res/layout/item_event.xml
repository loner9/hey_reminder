<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bgitem"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp"
    android:layout_height="100dp">

    <LinearLayout
        android:id="@+id/list_root"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/judulevnt"
                android:layout_marginTop="19dp"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:text="Judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/ketevnt"
            android:textSize="12sp"
            android:textColor="#ADADAD"
            android:layout_marginTop="8dp"
            android:text="Keterangan"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end">
                <TextView
                    android:id="@+id/wktevnt"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="8dp"
                    android:text="@string/wkt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  />
                <TextView
                    android:id="@+id/dash"
                    android:textSize="12sp"
                    android:layout_toEndOf="@id/wktevnt"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="8dp"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  />
                <TextView
                    android:id="@+id/tglevnt"
                    android:textSize="12sp"
                    android:layout_toEndOf="@id/dash"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="8dp"
                    android:text="@string/tgl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>