<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/change_pass_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:scaleY="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_person_white_24dp"
                android:tint="@color/colorAccent"/>

            <EditText
                android:id="@+id/change_pass_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/change_pass_image"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/filled_non"
                android:backgroundTint="@color/colorAccent"
                android:drawableTint="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimary"
                android:padding="4dp"
                android:drawableStart="@drawable/ic_action_alarms"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textCursorDrawable="@drawable/pink_cursor"
                />

            <EditText
                android:id="@+id/change_pass_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/change_pass_email"
                android:drawableTint="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimary"
                android:hint="Password Lama"
                android:inputType="textPassword"
                android:padding="4dp"
                android:drawableStart="@drawable/ic_lock_white_24dp"
                android:background="@drawable/filled_non"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textCursorDrawable="@drawable/pink_cursor"
                />

            <EditText
                android:id="@+id/change_pass_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/change_pass_password"
                android:drawableTint="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimary"
                android:hint="Password Baru"
                android:inputType="textPassword"
                android:padding="4dp"
                android:drawableStart="@drawable/ic_lock_white_24dp"
                android:background="@drawable/filled_non"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textCursorDrawable="@drawable/pink_cursor"
                />

            <Button
                android:id="@+id/change_pass_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/change_pass_new_password"
                android:text="Update"
                android:padding="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textSize="24sp"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:background="@drawable/filled_white"
                android:backgroundTint="@color/colorPrimary"
                />


        </RelativeLayout>


    </ScrollView>
</RelativeLayout>